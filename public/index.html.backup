        // Category Management
        function renderCategories() {
            const list = document.getElementById('categories-list');
            if (!list) return;
            list.innerHTML = categories.map((cat, idx) => `
                <div style="background: linear-gradient(135deg, var(--active-menu-gradient-start), var(--active-menu-gradient-end)); color: white; padding: 8px 12px; border-radius: 6px; display: flex; align-items: center; gap: 8px; font-size: 14px;">
                    ${cat}
                    <button onclick="deleteCategory(${idx})" style="background: none; border: none; color: white; cursor: pointer; font-weight: bold; padding: 0; margin-left: 4px;">Ã—</button>
                </div>
            `).join('');
        }
        
        function addCategory() {
            const input = document.getElementById('new-category');
            if (!input) return;
            const name = input.value.trim();
            if (name && !categories.includes(name)) {
                categories.push(name);
                localStorage.setItem('categories', JSON.stringify(categories));
                renderCategories();
                input.value = '';
                updateCategorySelects();
                showNotification('Category added successfully', 'success');
            }
        }
        
        function deleteCategory(index) {
            if (confirm('Delete this category?')) {
                categories.splice(index, 1);
                localStorage.setItem('categories', JSON.stringify(categories));
                renderCategories();
                updateCategorySelects();
                showNotification('Category deleted', 'success');
            }
        }
        
        function updateCategorySelects() {
            const select = document.getElementById('category');
            if (select) {
                const current = select.value;
                select.innerHTML = '<option value="">All Categories</option>' + categories.map(cat => `<option value="${cat}">${cat}</option>`).join('');
                select.value = current;
            }
        }

        // Load last update date
        function setLastUpdateDate() {
            const today = new Date().toLocaleDateString('en-US');
            const lastUpdateEl = document.getElementById('last-update');
            if (lastUpdateEl) lastUpdateEl.textContent = today;
        }

        loadSettings();
        
        function renderCalendarGrid() {
            const monthNames = ['January', 'February', 'March', 'April', 'May', 'June', 'July', 'August', 'September', 'October', 'November', 'December'];
            const dayNames = ['Sun', 'Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat'];
            
            document.getElementById('calendar-header').innerHTML = dayNames.map(d => `<div style="text-align: center; padding: 8px; font-weight: bold; color: var(--primary);">${d}</div>`).join('');
            
            const firstDay = new Date(currentYear, currentMonth, 1).getDay();
            const daysInMonth = new Date(currentYear, currentMonth + 1, 0).getDate();
            
            let html = '';
            for (let i = 0; i < firstDay; i++) {
                html += '<div></div>';
            }
            
            for (let day = 1; day <= daysInMonth; day++) {
                const dateObj = new Date(currentYear, currentMonth, day);
                const dateStr = dateObj.toLocaleDateString('en-US');
                const projectsOnDay = projects.filter(p => p.startDate && new Date(p.startDate).toLocaleDateString('en-US') === dateStr);
                const hasProject = projectsOnDay.length > 0;
                
                const isToday = new Date().toLocaleDateString('en-US') === dateStr;
                const bgColor = (isToday || hasProject) ? 'var(--primary)' : 'transparent';
                const textColor = (isToday || hasProject) ? 'white' : 'var(--text)';
                html += `<div style="padding: 12px 4px; border-radius: 8px; text-align: center; background: ${bgColor}; color: ${textColor}; cursor: pointer; font-weight: 500; min-height: 50px; display: flex; flex-direction: column; justify-content: center;">${day}${hasProject ? '<div style="font-size: 9px; margin-top: 2px;">' + projectsOnDay.length + ' event</div>' : ''}</div>`;
            }
            
            document.getElementById('calendar-grid').innerHTML = html;
            
            const monthYear = document.getElementById('calendar-month');
            if (monthYear) {
                monthYear.textContent = monthNames[currentMonth] + ' ' + currentYear;
            }
        }
        
        function previousMonth() {
            currentMonth--;
            if (currentMonth < 0) {
                currentMonth = 11;
                currentYear--;
            }
            renderCalendarGrid();
        }
        
        function nextMonth() {
            currentMonth++;
            if (currentMonth > 11) {
                currentMonth = 0;
                currentYear++;
            }
            renderCalendarGrid();
        }
