        function setTheme(theme) {
            localStorage.setItem('theme', theme);
            if (theme === 'dark') {
                document.body.classList.add('dark-mode');
            } else {
                document.body.classList.remove('dark-mode');
            }
        }

        function toggleSection(section) {
            const content = document.getElementById(section + '-content');
            const button = document.getElementById(section + '-toggle');
            if (content.style.display === 'none') {
                content.style.display = 'block';
                button.textContent = 'âˆ’';
                localStorage.setItem(section + 'Expanded', 'true');
            } else {
                content.style.display = 'none';
                button.textContent = '+';
                localStorage.setItem(section + 'Expanded', 'false');
            }
        }

        function toggleCalendar() {
            const content = document.getElementById('calendar-content');
            const button = document.getElementById('calendar-toggle');
            if (content.style.display === 'none') {
                content.style.display = 'block';
                button.textContent = 'âˆ’';
                localStorage.setItem('calendarExpanded', 'true');
            } else {
                content.style.display = 'none';
                button.textContent = '+';
                localStorage.setItem('calendarExpanded', 'false');
            }
        }

        function restoreAppearanceState() {
            const sections = ['appearance', 'branding', 'menu', 'categories', 'financial', 'data'];
            sections.forEach(section => {
                const isExpanded = localStorage.getItem(section + 'Expanded') === 'true';
                const content = document.getElementById(section + '-content');
                const button = document.getElementById(section + '-toggle');
                if (content && button) {
                    if (!isExpanded) {
                        content.style.display = 'none';
                        button.textContent = '+';
                    } else {
                        content.style.display = 'block';
                        button.textContent = 'âˆ’';
                    }
                }
            });
            
            // Restore calendar state
            const calendarExpanded = localStorage.getItem('calendarExpanded') !== 'false';
            const calendarContent = document.getElementById('calendar-content');
            const calendarButton = document.getElementById('calendar-toggle');
            if (calendarContent && calendarButton) {
                if (!calendarExpanded) {
                    calendarContent.style.display = 'none';
                    calendarButton.textContent = '+';
                } else {
                    calendarContent.style.display = 'block';
                    calendarButton.textContent = 'âˆ’';
                }
            }
        }

        
